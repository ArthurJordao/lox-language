    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch AstPrinter",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.lox.AstPrinter",
            "projectName": "lox-language"
        },
        {
            "type": "java",
            "name": "Launch Lox",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.lox.Lox",
            "projectName": "lox-language",
            "args": "./example.lox"
        },
        {
            "type": "java",
            "name": "Launch GenerateAst",
            "request": "launch",
            "mainClass": "com.craftinginterpreters.tool.GenerateAst",
            "projectName": "lox-language",
            "args": "./src/main/java/com/craftinginterpreters/lox"
        }
    ]
}
